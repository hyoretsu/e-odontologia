{
    "extends": "../@shared/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react-native",
        "noEmit": true,
        "paths": {
            "@api": ["data/services/api"],
            "@components/*": ["ui/components/*"],
            "@contexts/*": ["data/contexts/*"],
            "@styles/*": ["ui/styles/*"],
            "@units/*": ["data/units/*"]
        },
        "rootDir": "./src",
        "target": "esnext",
        "typeRoots": [
            "../node_modules/@types",
            "./node_modules/@types",
            "./src/data/@types"
        ]
    },
    "include": ["src/**/*"]
}
